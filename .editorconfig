root = true

[*.cs]

# JetBrains Rider custom properties for code inspections
possible_null_reference_exception_highlighting = error
csharp_blank_lines_between_using_groups = 1
blank_lines_between_using_groups = 1
indent_style = tab
indent_size = tab
tab_width = 4

